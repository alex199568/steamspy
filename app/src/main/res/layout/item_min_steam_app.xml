<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginLeft="@dimen/listItemStartMargin"
    android:layout_marginStart="@dimen/listItemStartMargin"
    android:layout_marginTop="@dimen/listItemTopMargin"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/appThumbnail"
        android:layout_width="@dimen/listItemCapsuleImageWidth"
        android:layout_height="@dimen/listItemCapsuleImageHeight"
        android:layout_gravity="center"
        android:contentDescription="@string/capsuleContentDescription"
        android:scaleType="fitXY"
        tools:src="@drawable/app_thumbnail_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/listItemTextCapsuleLeftMargin"
        android:layout_marginStart="@dimen/listItemTextCapsuleLeftMargin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/minAppName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/listItemTextRightMargin"
            android:layout_marginRight="@dimen/listItemTextRightMargin"
            android:layout_weight="99"
            android:gravity="center_vertical"
            android:textColor="@android:color/primary_text_light"
            android:textSize="@dimen/listItemTextSize"
            tools:text="Some Steam App Name" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/listItemDividerThickness"
            android:background="@color/colorListItemDivider" />
    </LinearLayout>


</LinearLayout>