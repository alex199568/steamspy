<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginLeft="@dimen/listItemSideMargin"
    android:layout_marginStart="@dimen/listItemSideMargin"
    android:layout_marginTop="@dimen/listItemTopMargin"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/topAppThumbnail"
        android:layout_width="@dimen/listItemCapsuleImageWidth"
        android:layout_height="@dimen/listItemCapsuleImageHeight"
        android:layout_gravity="center"
        android:contentDescription="@string/capsuleContentDescription"
        android:scaleType="fitXY"
        tools:src="@drawable/app_thumbnail_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/listItemTextCapsuleLeftMargin"
        android:layout_marginStart="@dimen/listItemTextCapsuleLeftMargin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="99"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/topAppName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/listItemInnerSideMargin"
                android:layout_marginRight="@dimen/listItemInnerSideMargin"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@android:color/primary_text_light"
                android:textSize="@dimen/listItemTextSize"
                tools:text="Some Steam App Name" />

            <TextView
                android:id="@+id/topAppPosition"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/listItemSideMargin"
                android:layout_marginRight="@dimen/listItemSideMargin"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:textColor="@android:color/secondary_text_dark"
                android:textSize="@dimen/listItemTextSize"
                tools:text="#12" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/listItemDividerThickness"
            android:background="@color/colorListItemDivider" />
    </LinearLayout>


</LinearLayout>