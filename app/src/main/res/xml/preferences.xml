<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="automatic_data_update_category"
        android:title="@string/prefAutoUpdateCategoryTitle"
        >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="automatic_data_update"
            android:summary="@string/preferenceAutomaticDataUpdateDescription"
            android:title="@string/preferenceAutomaticDataUpdateTitle"/>
        <CheckBoxPreference
            android:defaultValue="false"
            android:enabled="false"
            android:key="automatic_data_update_on_mobile_data"
            android:summary="@string/prefAutoUpdateMobileDataSummary"
            android:title="@string/prefAutoUpdateMobileDataTitle"/>
        <CheckBoxPreference
            android:defaultValue="false"
            android:enabled="false"
            android:key="automatic_data_update_on_low_battery"
            android:summary="@string/prefAutoUpdateLowBatterySummary"
            android:title="@string/prefAutoUpdateLowBatteryTitle"
            />
        <CheckBoxPreference
            android:defaultValue="false"
            android:enabled="false"
            android:key="automatic_data_update_on_slow_connectivity"
            android:summary="@string/prefAutoUpdateSlowConnectionSummary"
            android:title="@string/prefAutoUpdateSlowConnectionTitle"
            />
    </PreferenceCategory>
</PreferenceScreen>